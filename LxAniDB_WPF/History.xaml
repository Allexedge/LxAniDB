<Window x:Class="LxAniDB_WPF.History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="History" Height="338" Width="503" Closing="Window_Closing">
    <Grid>
        <ListBox x:Name="listHistory" Margin="10,10,10,46" SelectionMode="Extended"/>
        <Button x:Name="btnClear" Content="Remove Selected" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" Width="110" Click="btnClear_Click"/>
        <Button x:Name="btnClearAll" Content="Remove All" HorizontalAlignment="Left" Margin="125,270,0,0" VerticalAlignment="Top" Width="110" Click="btnClearAll_Click"/>

    </Grid>
</Window>
